CONFIG_MCU_FREQ=18432000
CONFIG_BOOTLOADER=y
CONFIG_BOOT_DEVID=0x44537470
CONFIG_UART_DEBUG=y
CONFIG_UART_BAUDRATE=115200
CONFIG_UART_BUF_SHIFT=8
CONFIG_COMMAND_CHANNEL_DUMP=y
