CONFIG_RTC_DSRTC=y
CONFIG_HAVE_IEEE=y
CONFIG_REMOTE_DISPLAY=y
CONFIG_DISPLAY_BUFFER_SIZE=40
CONFIG_M2I=y
CONFIG_P00CACHE=y
